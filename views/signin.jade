doctype 5
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/normalize.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Questrial", type="text/css")
    link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Raleway:400,800", type="text/css")
    link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Nunito", type="text/css")
    link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Lato:400,700,900", type="text/css")
    link(rel="stylesheet", href="http://fonts.googleapis.com/css?family=Cabin:400,700", type="text/css")
    meta(NAME='ROBOTS', CONTENT='NOINDEX, NOFOLLOW')  
  body
    div.containerPage
      div.nonFooterContent
        div#topHeader(style="width:100%;height:150px;color:#e9e9e9")
          div(style='padding-top:50px').container
            div(style='float:left;')
              img(src='images/eventful_one_small.png')
            div.logo-text eventful
        div.container
          if(message.length > 0)
            div.container(style="padding-left:350px;padding-top:100px;")
              img(src="images/sad_icon.png", style="float:left;")
              div.loginErrorLabel(style="float:left;padding-top:16px;padding-left:20px;")  Sorry, the credentials you entered are not correct.
          form(action="signin", method="post")
            div(style="margin:auto;width:320px;margin-top:150px")
              div(style="padding-bottom:20px;")
                div(style="float:left;margin-left:0px;margin-bottom:15px;font-size:16pt;").formLabel Sign in
              div(style="margin-bottom:10px;clear:both;").loginTextboxContainer
                div(style="float:left;margin-left:4px;margin-top:4px;")
                  img(src="images/User.png", style='margin-top:5px;margin-right:5px;')
                div(style="float:left;margin-left:4px;margin-top:4px;")
                  input#username(type="text", name="username").loginTextboxGreyedOut
              div(style="margin-bottom:10px;clear:both;").loginTextboxContainer
                div(style="float:left;margin-left:4px;margin-top:4px;")
                  img(src="images/Lock.png", style='margin-top:5px;margin-right:5px;')
                div(style="float:left;margin-left:4px;margin-top:4px;")
                  input#password(type="text", name="password").loginTextboxGreyedOut
              a.loginButton#btnLogin(href="")  Sign in  
    div.footer#footer
      div.container
        br
        p.footerText  Brought to you by appfoundry
        p.footerText  Part of Enterprise Applications
        p.footerText  Turner Broadcasting System, Inc.
        p.footerText  Copyright 2012    
  script(src="javascripts/jquery-1.8.0.min.js", type="application/javascript")
  script(src="javascripts/moment-min.js", type="application/javascript")
  script(src="javascripts/underscore_1_3_3.js", type="application/javascript")
  script(src="javascripts/utils.js", type="application/javascript")
  script(src="javascripts/signin.js", type="application/javascript")












